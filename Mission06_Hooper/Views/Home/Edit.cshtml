@model Mission06_Hooper.Models.Movie

@{
    ViewData["Title"] = "Edit Movie";
}

<div class="text-center">
    <h1 class="display-4">Edit Movie</h1>
</div>

<!-- Edit form - hidden field for MovieId -->
<form asp-action="Edit" asp-controller="Home" method="post">
    <input type="hidden" asp-for="MovieId" />

    <!-- Category dropdown -->
    <label>
        Category *<br>
        <select asp-for="CategoryId" required>
            <option value="">--Select--</option>
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.CategoryId">@category.CategoryName</option>
            }
        </select>
    </label><br><br>

    <!-- Title input -->
    <label>
        Title *<br>
        <input asp-for="Title" required>
    </label><br><br>

    <!-- Year with validation -->
    <label>
        Year *<br>
        <input asp-for="Year" type="number" required>
    </label><br><br>

    <!-- Director input -->
    <label>
        Director *<br>
        <input asp-for="Director" required>
    </label><br><br>

    <!-- Rating text input -->
    <label>
        Rating *<br>
        <input asp-for="Rating" required>
    </label><br><br>

    <!-- Edited - required -->
    <label>
        Edited *<br>
        <select asp-for="Edited" required>
            <option value="">--Select--</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </label><br><br>

    <!-- CopiedToPlex - required -->
    <label>
        Copied to Plex *<br>
        <select asp-for="CopiedToPlex" required>
            <option value="">--Select--</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </label><br><br>

    <!-- Optional fields -->
    <label>
        Lent To<br>
        <input asp-for="LentTo">
    </label><br><br>

    <label>
        Notes<br>
        <input asp-for="Notes" maxlength="25">
    </label><br><br>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="MovieList" class="btn btn-secondary">Cancel</a>
</form>

<div asp-validation-summary="All" class="text-danger"></div>