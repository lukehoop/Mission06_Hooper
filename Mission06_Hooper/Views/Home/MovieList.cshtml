@model List<Mission06_Hooper.Models.Movie>

@{
    ViewData["Title"] = "Movie Collection";
}

<div class="text-center">
    <h1 class="display-4">Joel's Movie Collection</h1>
    <a asp-action="AddMovies" class="btn btn-primary mb-3">Add New Movie</a>
</div>

<!-- Bootstrap styled table -->
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Title</th>
            <th>Year</th>
            <th>Director</th>
            <th>Category</th>
            <th>Rating</th>
            <th>Edited</th>
            <th>Copied to Plex</th>
            <th>Lent To</th>
            <th>Notes</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@(movie.Title ?? "Unknown")</td>
                <td>@(movie.Year?.ToString() ?? "Unknown")</td>
                <td>@(movie.Director ?? "Unknown")</td>
                <td>@(movie.Category?.CategoryName ?? "Unknown")</td>
                <td>@(movie.Rating ?? "N/A")</td>
                <td>@(movie.Edited.HasValue ? (movie.Edited.Value ? "Yes" : "No") : "-")</td>
                <td>@(movie.CopiedToPlex.HasValue ? (movie.CopiedToPlex.Value ? "Yes" : "No") : "-")</td>
                <td>@(movie.LentTo ?? "-")</td>
                <td>@(movie.Notes ?? "-")</td>
                <td>
                    <!-- Edit and Delete buttons -->
                    <a asp-action="Edit" asp-route-id="@movie.MovieId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@movie.MovieId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>