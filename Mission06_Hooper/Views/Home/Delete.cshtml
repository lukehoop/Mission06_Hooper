@model Mission06_Hooper.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<div class="text-center">
    <h1 class="display-4">Delete Movie</h1>
    <h3>Are you sure you want to delete this movie?</h3>
</div>

<!-- Display movie details -->
<div class="text-center">
    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>Year:</strong> @Model.Year</p>
    <p><strong>Director:</strong> @Model.Director</p>
    <p><strong>Category:</strong> @Model.Category?.CategoryName</p>
</div>

<!-- Delete confirmation form -->
<form asp-action="DeleteConfirmed" asp-controller="Home" method="post" class="text-center">
    <input type="hidden" asp-for="MovieId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="MovieList" class="btn btn-secondary">Cancel</a>
</form>